{
  "name": "siv",
  "version": "0.0.0",
  "main": "app.js",
  "scripts": {
    "link:html": "ln -s -r -f ./src/siv.html ./build/siv.html",
    "link:css": "ln -s -r -f ./src/siv.css ./build/siv.css",
    "link:config": "ln -s -r -f ./package.json ./build/package.json",
    "make:links": "npm run link:html && npm run link:css && npm run link:config",
    "download:icons": "wget --input-file=icons.txt --directory-prefix=./build/icons",
    "setup:directories": "mkdir -p build build/icons build/extensions build/logs",
    "postsetup:directories": "npm run download:icons && npm run make:links",
    "build:js": "babel src/ --out-dir build/ --presets react,es2015",
    "postinstall": "npm run setup:directories && npm run build:js",
    "workon:js": "babel src/ --watch --out-dir build/ --presets react,es2015",
    "tests": "mocha tests/",
    "linter-on": "eslint"
  },
  "devDependencies": {
    "babel-cli": "6.0.14",
    "babel-eslint": "4.1.5",
    "babel-preset-es2015": "6.0.14",
    "babel-preset-react": "6.0.14",
    "chai": "3.4.1",
    "eslint": "1.9.0",
    "eslint-config-airbnb": "1.0.0",
    "eslint-plugin-react": "3.8.0",
    "mocha": "2.3.3"
  },
  "dependencies": {
    "aws-sdk": "2.2.18",
    "minimist": "1.2.0",
    "react": "0.14.1",
    "react-dom": "0.14.1",
    "request": "2.65.0",
    "winston": "2.1.1"
  }
}
